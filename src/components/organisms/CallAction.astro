---
import LessThan from '../icons/LessThan.astro'
import GreaterThan from '../icons/GreaterThan.astro'
---

<section id="callAction">

  <p style="text-align: center">
    ¿estás interesado? <br /> platica con nosotros
  </p>
  
  <div class="container">
    <button class="call-btn XL whaPC">
      <span style="font-size: 20px; text-align: center">
        manda un mensaje
      </span>
      <svg
      xmlns="http://www.w3.org/2000/svg"
      width="33"
      height="33"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
      class="icon icon-tabler icons-tabler-outline icon-tabler-brand-whatsapp"
      >
      <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
      <path d="M3 21l1.65 -3.8a9 9 0 1 1 3.4 2.9l-5.05 .9"></path>
      <path
      d="M9 10a.5 .5 0 0 0 1 0v-1a.5 .5 0 0 0 -1 0v1a5 5 0 0 0 5 5h1a.5 .5 0 0 0 0 -1h-1a.5 .5 0 0 0 0 1"
      ></path>
    </svg>
  </button>
</div>
<div class="tiltsMessage">
  <LessThan />
  <span> queremos ayudarte a crear tu proyecto </span>
  <GreaterThan />
</div>
</section>


<script>
  import { sendWhaPC } from "../../lib/devFunctions";

  const whaLinkPromise = sendWhaPC(
    "¡Hola! Estoy interesado/a en los servicios de la agencia digital. ¿Podrías proporcionarme más información?"
  );
  const whaPC = document.querySelector(".whaBubble");

  whaPC?.addEventListener("click", async function () {
    const whaLink = await whaLinkPromise;
    window.open(whaLink, "_blank");
  });
</script>

<style lang="scss">



  #callAction {
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 27px;

    @media(min-width:980px){
      flex-direction: row;
      gap: 40px;
    }

    p {
      font-family: "space grotesk", sans-serif;
      font-size: 32px;
    }
  }

  .call-btn {
    background-color: #2c2c2c;
    font-size: 3rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    color: #ffffff;
    border: 1px solid #ffffff;
    border-radius: 100px;
    padding: 20px 40px 20px 40px;
    cursor: pointer;
    gap: 10px;
    transition: padding 0.2s ease-in-out;
    &:hover {
      padding: 10px 50px 10px 50px;
    }
    p {
      font-size: 1.5rem;
    }
    @media(min-width: 980px){
      margin: 0;
    }
  }

  .tiltsMessage {
    margin: 20px 0 80px 0;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 6px;
    font-size: 16px;
    @media(min-width: 980px){
      margin: 0;
    }
  }

  .container {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 40px 0 100px 0;
    @media(min-width: 980px){
      margin: 0;
    }
  }
</style>
